require_relative "helper"

desc "Clean all temporary files generated by all plugins"
task :clean do
    dir = Dir.new File.dirname __FILE__
    dir.each do |sub|
        next if sub == "." or sub == ".."
        next unless File.directory? sub
        with_dir sub do 
            sh "rake clean"
        end
    end
end

namespace :inspect do
    desc "Inspect the helper for plugins development"
    task :helper do
        require_relative "helper"
        puts generate_problems.inspect
    end
end